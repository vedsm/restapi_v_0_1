<!-- views/createevent.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Create Event </h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!--
    Event:{
        eventName:String,
        eventType:String,
        description:String,
        eventID:String,
        venue:{
            name:String,
            location:{
                lat:String,
                lon:String,
                address:String
            }
        },
        eventDetails:{
            hosts:{ //this should be an array
                id:String,
                name:String,
                picUri:String
            }
        }
    }
        -->
        <!-- create event FORM -->
        <form action="/createevent" method="post">
            <div class="form-group">
                <label>token</label>
                <input type="text" class="form-control" name="token">
            </div>
            <div class="form-group">
                <label>eventName</label>
                <input type="text" class="form-control" name="eventName">
            </div>
            <div class="form-group">
                <label>eventType</label>
                <input type="text" class="form-control" name="eventType">
            </div>
            <div class="form-group">
                <label>description</label>
                <input type="text" class="form-control" name="description">
            </div>
            <div class="form-group">
                <label>eventID</label>
                <input type="text" class="form-control" name="eventID">
            </div>
            <div class="form-group">
                <label>venue_name</label>
                <input type="text" class="form-control" name="venue_name">
            </div>
            <div class="form-group">
                <label>venue_location_lat</label>
                <input type="text" class="form-control" name="venue_location_lat">
            </div>
            <div class="form-group">
                <label>venue_location_lon</label>
                <input type="text" class="form-control" name="venue_location_lon">
            </div>
            <div class="form-group">
                <label>venue_location_address</label>
                <input type="text" class="form-control" name="venue_location_address">
            </div>
            <div class="form-group">
                <label>eventDetails_hosts_id</label>
                <input type="text" class="form-control" name="eventDetails_hosts_id">
            </div>
            <div class="form-group">
                <label>eventDetails_hosts_name</label>
                <input type="text" class="form-control" name="eventDetails_hosts_name">
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Create Event</button>
        </form>

        <hr>

        <p>Need an account? <a href="/fbsignup">Signup</a></p>
        <p>Or go <a href="/">home</a>.</p>

    </div>

</div>
</body>
</html>
